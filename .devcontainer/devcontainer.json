{
  "name": "Netbox Plugin Development Container",
  "dockerComposeFile": "./docker-compose.yml",
  "service": "netbox",
  "workspaceFolder": "/workspace",  
  "postStartCommand": "",
  "postCreateCommand": ". /opt/netbox/venv/bin/activate && pip install --no-cache-dir -e /opt/netbox/netbox/plugins/netbox_demo_plugin",
  "overrideCommand": false,      // Do not overwrite the command values, allowing our compose command to run
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "mounts": [
    "source=${localWorkspaceFolder}/plugins,target=/opt/netbox/netbox/plugins,type=bind"
  ]
}
